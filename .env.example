# Discord Bot Configuration
DISCORD_TOKEN=your_bot_token_here
GUILD_ID=your_server_id_here
BIRTHDAY_CHANNEL_ID=channel_id_for_birthday_announcements

# OpenAI Configuration (for AI chat responses)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
# Optional: Custom personality (leave blank to use default sarcastic friend personality)
BOT_PERSONALITY=

# API Configuration
API_PORT=3001
API_KEY=your_optional_api_key_here
ALLOWED_ORIGINS=http://localhost:3000,https://yourapp.com

# Environment
NODE_ENV=production

# Timezone for birthday checks (e.g., America/New_York, America/Mexico_City, UTC)
TZ=America/Mexico_City

# GitHub Webhook (for auto-deployment)
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret_here
DEPLOY_SCRIPT=/var/www/discord-bot/auto-deploy.sh
